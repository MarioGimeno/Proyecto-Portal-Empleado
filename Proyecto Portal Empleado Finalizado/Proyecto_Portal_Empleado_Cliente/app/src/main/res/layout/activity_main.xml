<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#85d06a"
    tools:context=".view.MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:columnCount="2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:rowCount="3">

        <!-- Contenedor para Mis datos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:onClick="goToMisDatos"

            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:src="@drawable/misdatos"
                android:contentDescription="Mis datos" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Mis datos"
                android:textSize="24sp"
                android:textColor="#800080"
            android:textStyle="bold"
            android:gravity="center" />
        </LinearLayout>

        <!-- Contenedor para Mis mensajes -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:onClick="goToMisMensajes"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:src="@drawable/mismensajes"
                android:contentDescription="Mis notificaciones" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Notificaciones"
                android:textSize="24sp"
                android:textColor="#800080"
            android:textStyle="bold"
            android:gravity="center" />
        </LinearLayout>

        <!-- Contenedor para Mis vacaciones -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:onClick="goToMisVacaciones"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:src="@drawable/vacaciones"
                android:contentDescription="Mis vacaciones" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Vacaciones"
                android:textSize="24sp"
                android:textColor="#800080"
            android:textStyle="bold"
            android:gravity="center" />
        </LinearLayout>

        <!-- Contenedor para Mi jornada -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:onClick="goToMisFichajes"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:src="@drawable/mijornada"
                android:contentDescription="Mi jornada" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Fichajes"
                android:textSize="24sp"
                android:textColor="#800080"
            android:textStyle="bold"
            android:gravity="center" />
        </LinearLayout>

        <!-- Contenedor para Mis archivos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:onClick="goToMisArchivos"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:src="@drawable/misarchivos"
                android:contentDescription="Mis archivos" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Archivos"
                android:textSize="24sp"
                android:textColor="#800080"
            android:textStyle="bold"
            android:gravity="center" />
        </LinearLayout>

        <!-- Contenedor para Ajustes -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:src="@drawable/ajustes"
                android:contentDescription="Ajustes" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Ajustes"
                android:textSize="24sp"
                android:textColor="#800080"
            android:textStyle="bold"
            android:gravity="center" />
        </LinearLayout>

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
